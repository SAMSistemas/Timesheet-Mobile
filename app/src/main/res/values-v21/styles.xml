<resources>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:activatedBackgroundIndicator">?android:attr/selectableItemBackground</item>
        <item name="android:popupMenuStyle">@style/AppTheme.PopupMenuStyle</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/material_teal</item>
        <item name="popupMenuStyle">@style/AppTheme.PopupMenuStyle</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Dark.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="popupMenuStyle">@style/AppTheme.PopupMenuStyle</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
    </style>

    <style name="AppTheme.PopupMenuStyle" parent="Widget.AppCompat.Light.ListPopupWindow">
        <item name="background">@color/primary</item>
    </style>

    <style name="AppTheme.ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:colorButtonNormal">@color/accent</item>
    </style>

    <style name="AppTheme.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:background">@color/primary</item>
    </style>

    <style name="Preference_TextAppearanceMaterialBody2">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

</resources>
